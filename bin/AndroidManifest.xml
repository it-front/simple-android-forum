<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jogeeks.content.secrets"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.jogeeks.content.secrets.SecretsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.jogeeks.content.secrets.SingleSecretActivity"
            android:label="@string/title_activity_single_secret" >
        </activity>
        <activity
            android:name="com.jogeeks.content.secrets.LoginActivity_"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jogeeks.content.secrets.SignupActivity"
            android:label="@string/title_activity_signup" >
        </activity>
        <activity
            android:name="com.jogeeks.content.secrets.ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name="com.jogeeks.content.secrets.NewPostActivity"
            android:label="@string/title_activity_new_post" >
        </activity>
        <activity
            android:name="com.jogeeks.content.secrets.EditPostActivity"
            android:label="@string/title_activity_edit_post" >
        </activity>
    </application>

</manifest>
